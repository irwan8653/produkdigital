{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "build": {
          "cmds": [
            "cd backend && npm install --production",
            "cd backend && npx prisma generate",
            "echo 'Running database migration...'",
            "cd backend && npx prisma migrate deploy"
          ]
        }
      },
      "start": {
        "cmd": "cd backend && npm start"
      }
    }
  }
}
